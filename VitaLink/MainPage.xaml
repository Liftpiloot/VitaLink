<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VitaLink.MainPage">


    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="vitalink_logo.png"
                SemanticProperties.Description="VitaLink logo"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Rectangle
                Fill="Black"
                Opacity="0.3"
                WidthRequest="300"
                HeightRequest="100"
                HorizontalOptions="Center"
                RadiusX="20"
                RadiusY="20"/>
            <Rectangle
                Fill="Black"
                Opacity="0.3"
                WidthRequest="300"
                HeightRequest="100"
                HorizontalOptions="Center"
                RadiusX="20"
                RadiusY="20"/>
            <Rectangle
                Fill="Black"
                Opacity="0.3"
                WidthRequest="300"
                HeightRequest="100"
                HorizontalOptions="Center"
                RadiusX="20"
                RadiusY="20"/>

            <Image
                Source="kees.jpg"
                WidthRequest="100"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
